<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="bottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:id="@+id/viewfinder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/div_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="3"
            android:textSize="18dp"
            android:text="/" />

        <Button
            android:id="@+id/mult_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="3"
            android:textSize="18dp"
            android:text="X" />

        <Button
            android:id="@+id/backspace_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_back_space"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:textSize="18dp"
            android:text="7" />
        <Button
            android:id="@+id/eight_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="8" />

        <Button
            android:id="@+id/nine_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="9" />
        <Button
            android:id="@+id/sum_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:textSize="18dp"
            android:text="4" />
        <Button
            android:id="@+id/five_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="5" />

        <Button
            android:id="@+id/six_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="6" />
        <Button
            android:id="@+id/sub_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:textSize="18dp"
            android:text="1" />
        <Button
            android:id="@+id/two_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="2" />

        <Button
            android:id="@+id/three_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="3" />
        <Button
            android:id="@+id/dot_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="." />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/clear_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="C" />
        <Button
            android:id="@+id/zero_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="0" />
        <Button
            android:id="@+id/calc_bt"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:onClick="setTextOnView"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="=" />
    </LinearLayout>
</LinearLayout>