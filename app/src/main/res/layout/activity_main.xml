<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/viewfinder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/div_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="/"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/mult_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="X"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/backspace_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_back_space"
            android:gravity="center_horizontal"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="7"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/eight_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="8"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/nine_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="9"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/sum_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="+"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="4"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/five_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="5"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/six_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="6"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/sub_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="-"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/two_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="2"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/three_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="3"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/dot_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="."
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="C"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/zero_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/calc_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setTextOnView"
            android:padding="20dp"
            android:text="="
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>